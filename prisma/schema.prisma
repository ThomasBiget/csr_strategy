// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "sqlite"
  url       = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  entreprise String?
  projects  Projet[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Enjeu {
  id        Int      @id @default(autoincrement())
  label     String
  color     String
  pilier    String
  esrs      String
  description String
  business_impact Int
  soc_en_impact Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Projet {
  id        Int      @id @default(autoincrement())
  title     String
  description String
  maturity Int
  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int
  enjeu String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}